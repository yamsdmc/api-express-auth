{
  "name": "xpatmart_api",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "test:mail": "ts-node-dev -r tsconfig-paths/register src/test-send-mail.ts",
    "migrate": "NODE_ENV=development DATABASE_URL=postgres://${DB_USER:-postgres}:${DB_PASSWORD:-postgres}@${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-marketplace} node-pg-migrate --migrations-dir src/infrastructure/database/postgresql/migrations",
    "migrate:up": "NODE_ENV=development DATABASE_URL=postgres://${DB_USER:-postgres}:${DB_PASSWORD:-postgres}@${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-marketplace} node-pg-migrate up --migrations-dir src/infrastructure/database/postgresql/migrations",
    "migrate:down": "NODE_ENV=development DATABASE_URL=postgres://${DB_USER:-postgres}:${DB_PASSWORD:-postgres}@${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-marketplace} node-pg-migrate down --migrations-dir src/infrastructure/database/postgresql/migrations",
    "migrate:create": "node-pg-migrate create --migrations-dir src/infrastructure/database/postgresql/migrations",
    "migrate:prod": "env DATABASE_URL=$DATABASE_URL node-pg-migrate up --migrations-dir src/infrastructure/database/postgresql/migrations"
  },
  "author": "Gherbi Yamin",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.11.10",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "vitest": "^2.1.5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^10.2.4",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.8.0",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "resend": "^4.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3",
    "zod": "^3.23.8"
  }
}
